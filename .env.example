# .env.example

# This file contains a list of environment variables needed to run the application.
# Copy this file to .env and replace the placeholder values with your actual credentials.

# Database
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/ecommerce"

# Redis
REDIS_URL="redis://localhost:6379/0"

# JWT Authentication
SECRET_KEY="your_super_secret_key"

# Stripe Payment Provider
STRIPE_SECRET_KEY="your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"

# Admin credentials
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your_secure_admin_password"

# bKash Configuration (using mock values as placeholders)
BKASH_MOCK_MODE=True
BKASH_APP_KEY="mock_app_key"
BKASH_APP_SECRET="mock_app_secret"
BKASH_USERNAME="mock_username"
BKASH_PASSWORD="mock_password"
